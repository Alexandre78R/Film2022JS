<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <!-- Import l'icon -->
    <link rel="icon" href="./images/icon.png" />
    <!-- Import du css de container -->
    <link rel="stylesheet" href="./stylesheets/container.css">
    <!-- Import du css des from -->
    <link rel="stylesheet" href="./stylesheets/from.css">
    <!-- Import du css du footer -->
    <link rel="stylesheet" href="./stylesheets/footer.css">
    <!-- Titre de la page -->
    <title><%= title %></title>
</head>
<body>
    <header>
        <!-- Nav Bar -->
        <%- include('../Components/navBar', {online}); %>
        <!-- Carrousel -->
        <%- include('../Components/Carrousel', {online}); %>
    </header>

    <section>
      <div class="container_app_Contact">
        <form id="contact_form" action="/contact.html">
            <div class="structure-contact">
                <label>Nom</label><br />
                <input id="lastname" name="lastname" type="text" placeholder="Nom" size="30" /><br />
                <span id="lastname_validation"></span>
            </div>
            <div class="structure-contact">
                <label>Prénom</label><br />
                <input id="firstname" name="firstname" type="text" placeholder="Prénom" size="30" /><br />
                <span id="firstname_validation"></span>
            </div>
            <div class="structure-contact">
                <label>Adresse email</label><br />
                <input id="email" class="input" name="email" type="text" placeholder="Email" size="30" /><br />
                <span id="email_validation"></span>
            </div>
            <div class="structure-contact">
                <label>Votre question ?</label><br />
                <input id="object" class="input" name="object" type="text" placeholder="Votre question ?" size="30" /><br />
                <span id="object_validation"></span>
            </div>
            <div class="structure-contact">
                <label>Message</label><br />
                <textarea id="message" class="input" name="message" placeholder="Message" rows="15" cols="30"></textarea><br />
                <span id="message_validation"></span>
            </div>
            <div class="structure-button-contact">
                <input id="submit_button" class="button-contact" type="submit" value="Envoyer"/>
            </div>
          </form>
      </div>
    </section>
    <%- include('../Components/footer', {online}); %>
</body>
</html>